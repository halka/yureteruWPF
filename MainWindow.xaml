<Window x:Class="YureteruWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="Yureteru" Height="1000" Width="500"
        Background="{StaticResource DarkBackgroundBrush}"
        WindowStartupLocation="CenterScreen">

    <Window.InputBindings>
        <KeyBinding Key="T" Command="{Binding StartMockCommand}"/>
        <KeyBinding Key="Esc" Command="{Binding DisconnectCommand}"/>
    </Window.InputBindings>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PanelBackgroundBrush}"
                BorderBrush="{StaticResource HairlineBorderBrush}" BorderThickness="0,0,0,1" Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸš¨" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock FontSize="18" FontWeight="Black" VerticalAlignment="Center">
                        <Run Text="YURE" />
                        <Run Text="TERU" Foreground="{StaticResource AccentBrush}"/>
                    </TextBlock>
                </StackPanel>

                <!-- Toolbar -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">


                    <Rectangle Width="1" Fill="{StaticResource SubtleBorderBrush}" Margin="5,4" Height="16"/>

                        <Button Content="Connect"
                            Command="{Binding OpenSettingsCommand}"
                            Margin="5,0,5,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource TacticalButtonStyle}">
                                    <Setter Property="Visibility" Value="{Binding IsConnected, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMocking}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                    <Button Content="Disconnect"
                            Command="{Binding DisconnectCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource DangerButtonStyle}">
                                <Setter Property="Visibility" Value="{Binding IsConnected, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMocking}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>

                <!-- Status -->
                <Border Grid.Column="3" CornerRadius="4" Padding="8,4" VerticalAlignment="Center"
                        Background="{Binding IsConnected, Converter={StaticResource BoolToStatusBrushConverter}}">
                    <TextBlock FontWeight="SemiBold" FontSize="11">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="OFF"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Text" Value="ON"/>
                                        <Setter Property="Foreground" Value="{StaticResource StatusOnlineBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <!-- Main Content (Stacked for Portrait) -->
        <StackPanel Grid.Row="1" Margin="12">
            <!-- Time Display -->
            <TextBlock Text="{Binding CurrentTime, StringFormat='yyyy-MM-dd HH:mm:ss.fff'}"
                      FontFamily="Cascadia Mono, Consolas, Monospaced" FontSize="24" FontWeight="SemiBold"
                      HorizontalAlignment="Center" Margin="0,0,0,10"
                      Foreground="{StaticResource PrimaryTextBrush}"/>

            <!-- Seismic Intensity (Hero - JMA Color Coded) -->
            <Border Background="{Binding CurrentIntensity, Converter={StaticResource IntensityToColorConverter}}"
                    CornerRadius="2" Padding="20" Margin="0,0,0,10"
                    BorderBrush="#60ffffff" BorderThickness="1">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding CurrentIntensity, StringFormat=F2}"
                               FontSize="140" FontWeight="Black" Margin="0,-20"
                               FontFamily="Bahnschrift"
                               Style="{StaticResource JmaContrastTextStyle}"/>
                    <TextBlock Text="EARTHQUAKE DETECTING" FontSize="20" FontWeight="Black"
                               HorizontalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{StaticResource AlertForegroundBrush}"/>
                                <Setter Property="Opacity" Value="0.0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRecordingEvent}" Value="True">
                                        <Setter Property="Opacity" Value="1"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CurrentIntensity, Converter={StaticResource IntensityToColorConverter}}" Value="{StaticResource JmaCol5L}">
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CurrentIntensity, Converter={StaticResource IntensityToColorConverter}}" Value="{StaticResource JmaCol5U}">
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CurrentIntensity, Converter={StaticResource IntensityToColorConverter}}" Value="{StaticResource JmaCol6L}">
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CurrentIntensity, Converter={StaticResource IntensityToColorConverter}}" Value="{StaticResource JmaCol6U}">
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CurrentIntensity, Converter={StaticResource IntensityToColorConverter}}" Value="{StaticResource JmaCol7}">
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Long-Period Ground Motion (LPGM) Class -->
            <Border Background="{Binding CurrentLpgmClass, Converter={StaticResource LpgmClassToColorConverter}}"
                    CornerRadius="2" Padding="12" Margin="0,0,0,10"
                    BorderBrush="#60ffffff" BorderThickness="1"
                    Style="{StaticResource IndustrialPanelStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock FontSize="32" FontWeight="Black" FontFamily="Bahnschrift">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource JmaLpgmContrastTextStyle}">
                                    <Setter Property="Text" Value="{Binding CurrentLpgmClass, StringFormat='CLASS {0}'}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentLpgmClass}" Value="0">
                                            <Setter Property="Text" Value="NONE"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                         <TextBlock Text="{Binding CurrentSva, StringFormat=F1}" FontSize="24" FontWeight="Bold" FontFamily="Bahnschrift" HorizontalAlignment="Right"
                                   Style="{StaticResource JmaLpgmContrastTextStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Secondary Metrics (Gal & Acc) -->
            <Border Style="{StaticResource IndustrialPanelStyle}" Margin="0,0,0,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="ACCELERATION" FontSize="14" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding CurrentGal, StringFormat=F2}" FontSize="56" FontWeight="SemiBold" FontFamily="Bahnschrift"/>
                        </StackPanel>
                    </StackPanel>

                    <UniformGrid Grid.Column="1" Columns="1" VerticalAlignment="Center" Margin="20,0,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="X | " Foreground="{StaticResource AxisXBrush}" FontWeight="Black" FontSize="13"/>
                            <TextBlock Text="{Binding CurrentAcceleration.X, StringFormat=F3}" Width="65" TextAlignment="Right" FontWeight="SemiBold" FontSize="18" FontFamily="Bahnschrift"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Y | " Foreground="{StaticResource AxisYBrush}" FontWeight="Black" FontSize="13"/>
                            <TextBlock Text="{Binding CurrentAcceleration.Y, StringFormat=F3}" Width="65" TextAlignment="Right" FontWeight="SemiBold" FontSize="18" FontFamily="Bahnschrift"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Z | " Foreground="{StaticResource AxisZBrush}" FontWeight="Black" FontSize="13"/>
                            <TextBlock Text="{Binding CurrentAcceleration.Z, StringFormat=F3}" Width="65" TextAlignment="Right" FontWeight="SemiBold" FontSize="18" FontFamily="Bahnschrift"/>
                        </StackPanel>
                    </UniformGrid>
                </Grid>
            </Border>

            <!-- Visual Graph (Flexible Height) -->
            <Border Style="{StaticResource IndustrialPanelStyle}" Height="300" Margin="0,0,0,5">
                <Grid>
                    <TextBlock Text="ACCELERATION GRAPH" FontSize="14" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" VerticalAlignment="Top"/>
                    <lvc:CartesianChart
                        Series="{Binding Series}"
                        XAxes="{Binding XAxes}"
                        YAxes="{Binding YAxes}"
                        Visibility="{Binding IsConnected, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <TextBlock Text="CONNECT FOR LIVE STREAM" FontSize="20" FontWeight="Black" Opacity="0.3"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="{Binding IsConnected, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                </Grid>
            </Border>

            <!-- Bottom Utilities -->
            <StackPanel>
                <!-- History -->
                <Border Style="{StaticResource IndustrialPanelStyle}" Margin="0,0,0,10">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <TextBlock Text="HISTORY" FontSize="14" FontWeight="Bold"/>
                            <Button Content="ðŸ“¥" Style="{StaticResource SecondaryButtonStyle}" Command="{Binding ExportHistoryCommand}" HorizontalAlignment="Right" Padding="4,0"/>
                        </Grid>
                        <ItemsControl ItemsSource="{Binding EventHistory}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#22ffffff" BorderThickness="0,0,0,1" Padding="0,8,4,8">
                                        <StackPanel>
                                            <TextBlock Text="{Binding FormattedTimestamp}" FontSize="11" Foreground="{StaticResource TextMutedBrush}" FontFamily="Cascadia Mono, Consolas, Monospaced" Margin="0,0,0,4"/>
                                            <UniformGrid Columns="2">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="INT" FontSize="10" Width="25" Foreground="{StaticResource TextMutedBrush}" FontWeight="Bold" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding MaxIntensity, StringFormat=F2}" FontSize="14" FontWeight="Bold" FontFamily="Bahnschrift"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding MaxGal, StringFormat=F2}" FontSize="14" FontWeight="Bold" FontFamily="Bahnschrift"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="LPGM" FontSize="10" Width="30" Foreground="{StaticResource TextMutedBrush}" FontWeight="Bold" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding MaxLpgmClass}" FontSize="14" FontWeight="Bold" FontFamily="Bahnschrift"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,2,0,0">
                                                    <TextBlock Text="Sva" FontSize="10" Width="25" Foreground="{StaticResource TextMutedBrush}" FontWeight="Bold" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding MaxSva, StringFormat=F1}" FontSize="14" FontWeight="Bold" FontFamily="Bahnschrift"/>
                                                </StackPanel>
                                            </UniformGrid>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</ScrollViewer>
</Window>
