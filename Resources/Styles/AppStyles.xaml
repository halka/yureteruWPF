<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:YureteruWPF.Converters">

    <!-- Converters -->
    <converters:IntensityToColorConverter x:Key="IntensityToColorConverter"/>
    <converters:LpgmClassToColorConverter x:Key="LpgmClassToColorConverter"/>
    <converters:IntensityForegroundConverter x:Key="IntensityForegroundConverter"/>

    <!-- Colors & Brushes -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#000000"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#606060"/>
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#F7F7F7"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#007AFF"/>
    <SolidColorBrush x:Key="StatusOnlineBrush" Color="#0FD976"/>
    <SolidColorBrush x:Key="StatusOfflineBrush" Color="#5A5A5A"/>
    <SolidColorBrush x:Key="AlertForegroundBrush" Color="#FF3B30"/>
    <SolidColorBrush x:Key="SubtleBorderBrush" Color="#33000000"/>
    <SolidColorBrush x:Key="HairlineBorderBrush" Color="#30000000"/>
    <SolidColorBrush x:Key="AxisXBrush" Color="#FF3B30"/>
    <SolidColorBrush x:Key="AxisYBrush" Color="#007AFF"/>
    <SolidColorBrush x:Key="AxisZBrush" Color="#4CD964"/>

    <!-- JMA Intensity Colors (normal scheme: 1=white, 2=light blue, 3=light yellow, 4=yellow, 5-=orange, 5+=dark orange, 6-=red, 6+=dark red, 7=purple) -->
    <SolidColorBrush x:Key="JmaCol0" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="JmaCol1" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="JmaCol2" Color="#00D2FF"/>
    <SolidColorBrush x:Key="JmaCol3" Color="#FAFA00"/>
    <SolidColorBrush x:Key="JmaCol4" Color="#FFD200"/>
    <SolidColorBrush x:Key="JmaCol5L" Color="#FF9900"/>
    <SolidColorBrush x:Key="JmaCol5U" Color="#FF5F00"/>
    <SolidColorBrush x:Key="JmaCol6L" Color="#FF0000"/>
    <SolidColorBrush x:Key="JmaCol6U" Color="#A50000"/>
    <SolidColorBrush x:Key="JmaCol7" Color="#B40068"/>

    <!-- LPGM Class Colors -->
    <SolidColorBrush x:Key="JmaLpgmCol1" Color="#00D2FF"/>
    <SolidColorBrush x:Key="JmaLpgmCol2" Color="#FFD200"/>
    <SolidColorBrush x:Key="JmaLpgmCol3" Color="#FF9900"/>
    <SolidColorBrush x:Key="JmaLpgmCol4" Color="#FF0000"/>

    <!-- Styles -->
    <Style x:Key="TacticalButtonStyle" TargetType="Button">
        <!-- System-default button styling (no overrides) -->
    </Style>

    <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource TacticalButtonStyle}">
        <!-- System-default button styling (no overrides) -->
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource TacticalButtonStyle}">
        <!-- System-default -->
    </Style>

    <Style x:Key="IndustrialPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SubtleBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    <!-- Default text for dark theme -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>

    <!-- Text Styles for Contrast -->
    <Style x:Key="JmaContrastTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding CurrentIntensity, Converter={StaticResource IntensityToColorConverter}}" Value="{StaticResource JmaCol3}">
                <Setter Property="Foreground" Value="Black"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding CurrentIntensity, Converter={StaticResource IntensityToColorConverter}}" Value="{StaticResource JmaCol5U}">
                <Setter Property="Foreground" Value="White"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding CurrentIntensity, Converter={StaticResource IntensityToColorConverter}}" Value="{StaticResource JmaCol6L}">
                <Setter Property="Foreground" Value="White"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding CurrentIntensity, Converter={StaticResource IntensityToColorConverter}}" Value="{StaticResource JmaCol6U}">
                <Setter Property="Foreground" Value="White"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding CurrentIntensity, Converter={StaticResource IntensityToColorConverter}}" Value="{StaticResource JmaCol7}">
                <Setter Property="Foreground" Value="White"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>


    <Style x:Key="JmaLpgmContrastTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding CurrentLpgmClass}" Value="0">
                <Setter Property="Foreground" Value="Black"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
